{
    "clangd.enabled": true,
    "clangd.compilationDatabasePath": "build/",
    "clangd.arguments": [
        "--background-index",
        "--clang-tidy",
        "--header-insertion=iwyu",
        "--suggest-missing-includes"
    ],
    "python.pythonPath": "python3",
    "python.formatting.provider": "yapf",
    "python.linting.pylintEnabled": true
}
