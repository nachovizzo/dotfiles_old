# !/usr/bin/zsh
PWD=$(pwd)
DIRS=$(ls -d *)
echo "\e[1m\e[36mUpdating all the sub-repositories we find in $PWD"
for repo in $DIRS
do
    if [ -d $repo/.git ]; then
      echo "\e[1m\e[93mUpdating git repository found in $repo ...\e[0m"
      cd $repo
      git pull
      cd ../
    fi;
done
echo "done"


